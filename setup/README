#Install crap
sudo apt-get install vim
sudo vi /etc/apt/sources.list # Add in this ppa for nginx
sudo apt-get install nginx
sudo apt-get install php5-fpm
sudo apt-get install apache2-utils
#Copy over sys configs
sudo cp <base>/web-aux/php.ini  /etc/php5/fpm/php.ini
sudo vim /etc/php5/fpm/pool.d/www.conf #Switch to unix socket
sudo cp <base>/web-aux/defaults /etc/nginx/sites-available/default 
